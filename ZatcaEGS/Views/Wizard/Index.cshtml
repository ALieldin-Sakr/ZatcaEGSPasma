                                                <span asp-validation-for="ApiEndpoint" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-7 mb-3">
                                            <div class="form-group">
                                                <label class="form-label" asp-for="ApiSecret">Secret</label>
